@model StudentPortalCapstone.Models.Enrollment

@{
    ViewBag.Title = "UploadPic";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/3/w3.css">
    <br />
    <center> <img src="~/Content/Images/Choose.png"></center>

</head>
<body>


    @using (Html.BeginForm("ShowList", "Enrollments"))
    {
        <div class="form-horizontal">
            <hr />

