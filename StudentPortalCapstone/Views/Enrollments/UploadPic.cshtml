@model StudentPortalCapstone.Models.Enrollment

@{
    ViewBag.Title = "UploadPic";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h2>UploadPic</h2>

@using (Html.BeginForm("ShowList", "Enrollments"))
{
    <div class="form-horizontal">
        <hr />
        
        <div class="form-group">
            @Html.LabelFor(model => model.RosterId, "RosterId", htmlAttributes: new { @class ="control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("RosterId", null, htmlAttributes: new { @class ="form-control"})
                @Html.ValidationMessageFor(model => model.RosterId, "", new { @class="text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default"/>
            </div> 
        </div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

