
@model IEnumerable<StudentPortalCapstone.Models.Assignments>

@{
    ViewBag.Title = "DisplayAssignmentsForDownload";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<br />


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roster.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPts)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Roster.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPts)
                </td>
                <td>
                    @Html.ActionLink("Download", "Download", new { id = item.Id }, new { @class = "btn btn-success" }) 
                   
                </td>
            </tr>
        }

    </table>
