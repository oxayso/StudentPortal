@model IEnumerable<StudentPortalCapstone.Models.Attendance>

@{
    ViewBag.Title = "FindMyAttendance";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<br /><br />


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/3/w3.css">
    <center> <img src="~/Content/Images/Attendance.png"></center>

</head>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Roster.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isPresent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Roster.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Date)*@
                <h5>@item.Date.ToShortDateString()</h5>
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.isPresent)*@
                @if (item.isPresent)
                { <h5>Present</h5> }
                else
                { <h5>Absent</h5> }
            </td>
            @*<td>*@
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            @*</td>*@
        </tr>
    }

</table>