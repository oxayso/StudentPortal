@model StudentPortalCapstone.Models.DisplayAttendanceViewModel

@{
    ViewBag.Title = "GetAttendance";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h2>Course Name: @Model.CourseName</h2>
<h3>Attendance for @Model.Date.DayOfWeek, @Model.Date.ToShortDateString()</h3>
<br />
<table class="table">
    <tr>
        <th>
            <h5><strong>First Name</strong></h5>
        </th>
        <th>
            <h5><strong>Last Name</strong></h5>
        </th>
        <th>
            <h5><strong>User Name</strong></h5>
        </th>
        <th>
            <h5><strong>Status</strong></h5>
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model.Attendances)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @if (item.isPresent)
                { <h5>Present</h5> }
                else
                { <h5>Absent</h5> }
            </td>
            @*<td>

                    @Html.ActionLink("Get Attendance", "Details", new { id = item.UserId }, new { @class = "btn btn-warning"})
                </td>*@
        </tr>
    }

</table>