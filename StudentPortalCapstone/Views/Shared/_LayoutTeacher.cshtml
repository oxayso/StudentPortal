<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - (Teacher) Student Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Student Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Classes<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Classes", "Index", "Rosters")</li>
                            <li>@Html.ActionLink("Add Class", "AddAClass", "Rosters")</li>
                            <li>@Html.ActionLink("Add Student", "Create", "Enrollments")</li>
                        </ul>
                    </li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">People<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Upload Pic", "UploadPic", "Enrollments")</li>
                            <li>@Html.ActionLink("Search", "Search", "Enrollments")</li>
                        </ul>
                    </li>
                    
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Assignments<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Assignment", "Create", "Assignments")</li>
                            <li>@Html.ActionLink("Assignments", "FindAssignmentForClass", "Assignments")</li>  
                            <li>@Html.ActionLink("Grade Assignments", "FindClassForAssignments", "ReportCards")</li>  
                            <li>@Html.ActionLink("Edit Grade", "FindClassToEditGrade", "ReportCards")</li> 
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Attendance", "Attendance", "Home")</li>                              
                    @*<li>@Html.ActionLink("Grades", "Contact", "Home")</li>*@
                  



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Student Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
