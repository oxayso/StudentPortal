@model StudentPortalCapstone.Models.Assignments

@{
    ViewBag.Title = "FindClassForAssignments";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
<br />
<h1>Choose a class to view their assignments</h1>


@using (Html.BeginForm("DisplayAssignments", "ReportCards"))
{


    <div class="form-horizontal">
      
        <hr />


        <div class="form-group">
            @Html.LabelFor(model => model.RosterId, "Class Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RosterId", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Find" class="btn btn-success" />
            </div>
        </div>
        
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/3/w3.css">
            <center> <img src="https://s-media-cache-ak0.pinimg.com/originals/e9/65/20/e96520439e9867e64a7164fee0a48a01.gif"></center>

        </head>

    </div>
}