@model IEnumerable<StudentPortalCapstone.Models.ReportCard>

@{
    ViewBag.Title = "ShowStudentsAssignmentsForEdit";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<br />

<h1>Edit Grade</h1>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Assignments.AssignmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentPts)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Assignments.AssignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StudentPts)/@item.Assignments.MaxPts
            </td>

            <td>
                @Html.ActionLink("Edit Grade", "AddGrade", new { id = item.Id }, new { @class = "btn btn-success " })

                @*@Html.ActionLink("Add to Order", "AddToOrder", "OrderItems", new { id = menuItems.Id }, new { @class = "btn btn-success " })*@

                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@

            </td>
        </tr>
    }

</table>